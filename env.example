# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# LLM Model Configuration
LLM_MODEL_REASONING=anthropic.claude-sonnet-4-5-20250929  # For complex reasoning (Planner, OracleHealer)
LLM_MODEL_SPEED=anthropic.claude-haiku-3-5-20250219       # For fast operations (POMBuilder, Generator)

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pacts
POSTGRES_USER=pacts_user
POSTGRES_PASSWORD=your_postgres_password_here

# PostgreSQL connection string (alternative to individual settings)
DATABASE_URL=postgresql://pacts_user:your_postgres_password_here@localhost:5432/pacts

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_TTL=3600  # Working memory TTL in seconds (1 hour)

# LangSmith Observability (Optional but recommended)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=pacts-production

# Application Configuration
APP_ENV=development  # development, staging, production
LOG_LEVEL=INFO       # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000  # Default timeout in milliseconds
PLAYWRIGHT_SLOW_MO=0      # Slow motion in milliseconds (0 for no delay)

# Memory Configuration
EPISODIC_MEMORY_MAX_RUNS=100  # Max test runs stored per requirement
SEMANTIC_MEMORY_UPDATE_HOUR=2  # Hour of day for nightly aggregation (24-hour format)
PROCEDURAL_MEMORY_MIN_CONFIDENCE=0.6  # Minimum confidence for healing strategies

# Discovery Strategy Configuration
SEMANTIC_STRATEGY_ENABLED=true
SHADOW_DOM_STRATEGY_ENABLED=true
FRAME_TRAVERSAL_STRATEGY_ENABLED=true
PATTERN_EXTRACTION_STRATEGY_ENABLED=true
VISION_FALLBACK_STRATEGY_ENABLED=true

# Actionability Gate Configuration
ACTIONABILITY_CHECK_VISIBLE=true
ACTIONABILITY_CHECK_ENABLED=true
ACTIONABILITY_CHECK_STABLE=true
ACTIONABILITY_CHECK_ACCESSIBLE=true
ACTIONABILITY_CHECK_IDENTIFIED=true

# Test Execution Configuration
MAX_CONCURRENT_TESTS=5
TEST_RETRY_COUNT=2
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Healing Configuration
AUTONOMOUS_HEALING_ENABLED=true
MAX_HEALING_ATTEMPTS=3
REQUIRE_HUMAN_APPROVAL_THRESHOLD=0.5  # Confidence threshold for human approval

# API Configuration (if exposing REST API)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=your_secret_key_for_jwt_here  # For API authentication
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Feature Flags
FEATURE_MULTI_BROWSER=true
FEATURE_MOBILE_WEB=true
FEATURE_VISUAL_REGRESSION=false  # Future feature
FEATURE_API_TESTING=false        # Future feature

# Performance
BROWSER_POOL_SIZE=5
WORKER_CONCURRENCY=10

# Telemetry
TELEMETRY_ENABLED=true
TELEMETRY_AGGREGATION_ENABLED=true
TELEMETRY_BATCH_SIZE=100
