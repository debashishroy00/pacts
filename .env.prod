# =============================================================================
# PACTS v1.2 Production Environment Configuration
# =============================================================================
# Production-validated settings for enterprise deployments
# Last validated: 2025-11-01

# -----------------------------------------------------------------------------
# LLM Configuration (REQUIRED)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-production-anthropic-api-key
LLM_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4096

# -----------------------------------------------------------------------------
# Playwright Configuration
# -----------------------------------------------------------------------------
HEADLESS=true
BROWSER_TIMEOUT=30000
BROWSER_VIEWPORT_WIDTH=1280
BROWSER_VIEWPORT_HEIGHT=720
SLOW_MO=0  # Production speed

# -----------------------------------------------------------------------------
# MCP Playwright Integration (Discovery-Only Mode)
# -----------------------------------------------------------------------------
USE_MCP=true
MCP_ACTIONS_ENABLED=false  # CRITICAL: Actions disabled, discovery only
MCP_PW_TIMEOUT_MS=5000

# -----------------------------------------------------------------------------
# Testing Configuration
# -----------------------------------------------------------------------------
MAX_HEAL_ROUNDS=3
ACTIONABILITY_TIMEOUT=5000
STABILITY_SAMPLES=3
STABILITY_DELAY_MS=120
STABILITY_TOLERANCE=2.0

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTLOG_CONSOLE=false  # Use structured logs in production

# -----------------------------------------------------------------------------
# Production Optimizations
# -----------------------------------------------------------------------------
ENABLE_CACHING=true
ENABLE_AUTO_HEALING=true
ENABLE_TELEMETRY=true

# -----------------------------------------------------------------------------
# Site-Specific Credentials (Optional - for authenticated testing)
# -----------------------------------------------------------------------------
# Salesforce
SF_USERNAME=your-sf-username@company.com
SF_PASSWORD=your-sf-password

# SauceDemo
SAUCEDEMO_USERNAME=standard_user
SAUCEDEMO_PASSWORD=secret_sauce

# -----------------------------------------------------------------------------
# CI/CD Integration
# -----------------------------------------------------------------------------
# Database (optional - for test history)
# DATABASE_URL=postgresql://user:pass@host:5432/pacts

# LangSmith (optional - for observability)
# LANGSMITH_API_KEY=your-langsmith-key
# LANGSMITH_PROJECT=pacts-prod
# LANGSMITH_TRACING=true

# -----------------------------------------------------------------------------
# HITL Configuration
# -----------------------------------------------------------------------------
# Human-in-the-Loop settings for 2FA/CAPTCHA
HITL_TIMEOUT_SECONDS=900  # 15 minutes for manual intervention
HITL_SIGNAL_DIR=hitl
