# PACTS Production Environment Configuration
# Copy to .env and fill in your actual API keys

## LLM Provider Keys (REQUIRED)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

## LangSmith Tracing (OPTIONAL - for observability)
LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=pacts-production

## MCP Configuration (VALIDATED v1.2)
USE_MCP=true
MCP_ACTIONS_ENABLED=false
# NOTE: MCP actions MUST stay disabled to prevent false PASSes
# MCP operates on separate browser instance - only use for discovery

## Browser Configuration
SLOW_MO=0  # Production speed (0ms delay)
HEADLESS=true  # Run without visible browser
BROWSER_VIEWPORT_WIDTH=1280
BROWSER_VIEWPORT_HEIGHT=720

## Test Execution
MAX_HEAL_ROUNDS=3
GATE_TIMEOUT_MS=5000
ACTION_TIMEOUT_MS=5000

## Pattern Execution (v2.0)
ENABLE_AUTOCOMPLETE_PATTERN=true
ENABLE_ACTIVATOR_PATTERN=true
ENABLE_SPA_NAV_PATTERN=true

## Performance Budgets
MAX_STEP_TIME_MS=2500  # p95 target
MAX_TEST_TIME_MS=30000  # Full test timeout

## CI/CD
CI=false  # Set to true in GitHub Actions
RERUN_ON_FAIL=true
MAX_RETRIES=1

## Logging
LOG_LEVEL=INFO  # Use DEBUG for troubleshooting
CAPTURE_SCREENSHOTS=true
CAPTURE_TRACES=false  # Only on failure in CI

## Success Criteria (v1.2)
TARGET_HEAL_ROUNDS=0
TARGET_SUCCESS_RATE=100
